<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noticeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="150dp"
                android:layout_marginRight="150dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="#074d72"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/noticeSubtitle"
                android:layout_width="match_parent"
                android:layout_marginRight="120dp"
                android:layout_marginEnd="120dp"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:layout_below="@+id/noticeTitle"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/noticeDate"
                android:layout_toStartOf="@id/noticeDate"
                android:padding="3dp"
                android:src="@drawable/nav_routine"
                android:tint="#0050b7"/>

            <TextView
                android:id="@+id/noticeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="3dp"
                android:layout_marginTop="1dp"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>