<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#063986">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@drawable/inputtext_white"/>

        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/exam"

            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_date_range"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#063986"
                android:textSize="15sp"
                android:background="@drawable/exam_time_background"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/shiftName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Shift:"
            android:layout_below="@id/dateLayout"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/shiftName"
            android:layout_toEndOf="@id/shiftName"
            android:layout_below="@id/dateLayout"/>
        <TextView
            android:id="@+id/mediumName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Medium:"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_below="@id/shiftName"/>
        <TextView
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/mediumName"
            android:layout_toEndOf="@id/mediumName"
            android:layout_below="@id/shift"/>
        <TextView
            android:id="@+id/className"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Class:"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_below="@id/mediumName"/>
        <TextView
            android:id="@+id/classs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/className"
            android:layout_toEndOf="@id/className"
            android:layout_below="@id/medium"/>
        <TextView
            android:id="@+id/departmentName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Department:"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_below="@id/className"/>
        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/departmentName"
            android:layout_toEndOf="@id/departmentName"
            android:layout_below="@id/classs"/>
        <TextView
            android:id="@+id/sectionName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Section:"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_below="@id/departmentName"/>
        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/sectionName"
            android:layout_toEndOf="@id/sectionName"
            android:layout_below="@id/department"/>
        <TextView
            android:id="@+id/sessionName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Session:"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_below="@id/sectionName"/>
        <TextView
            android:id="@+id/session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/sessionName"
            android:layout_toEndOf="@id/sessionName"
            android:layout_below="@id/section"/>
        <Button
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:text="DETAILS"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/session"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>