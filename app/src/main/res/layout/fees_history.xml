<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:table="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
     android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#009688"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:padding="10dp"
            android:text="Select Year" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#FFFFFF" android:orientation="vertical"
      android:layout_below="@+id/linearLayout"
   >
    <de.codecrafters.tableview.TableView
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:tooltipText="12"
        table:tableView_headerColor="#80cbc4"
        android:divider="#ECEFF1"
        android:dividerHeight="1dip"
        table:tableView_columnCount="4"
        table:tableView_headerElevation="10" />
        <de.codecrafters.tableview.TableView
            android:id="@+id/tableView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tooltipText="12"
            table:tableView_headerColor="#26a69a"
            android:divider="#ECEFF1"
            android:dividerHeight="1dip"
            table:tableView_columnCount="4"
            table:tableView_headerElevation="10"
            />
    </LinearLayout>

</RelativeLayout>
