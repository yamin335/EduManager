<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/selectExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageExam"
            android:layout_toStartOf="@+id/imageExam"
            android:background="@drawable/syllabus_floating_text"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/select_exam"
            android:textColor="#0550b7"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/imageExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_exam"
            android:tint="#ffffff"
            android:background="@drawable/syllabus_floating_exam"
            android:layout_margin="3dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageDate"
            android:layout_toStartOf="@+id/imageDate"
            android:background="@drawable/syllabus_floating_text"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/select_date"
            android:textColor="#0550b7"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/imageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range"
            android:tint="#ffffff"
            android:background="@drawable/syllabus_floating_date"
            android:layout_margin="3dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>