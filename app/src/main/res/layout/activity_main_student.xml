<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/InstituteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="Buruz Bagan High School"
        android:textColor="#1031ea"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/FirstLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/line"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Establish"
        app:layout_constraintEnd_toStartOf="@+id/Establish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Establish"></LinearLayout>

    <LinearLayout
        android:id="@+id/SecondLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/line"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Establish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Establish"
        app:layout_constraintTop_toBottomOf="@+id/Establish"></LinearLayout>

    <TextView
        android:id="@+id/Establish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="Since 1985"
        android:textColor="#1031ea"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InstituteName" />

    <Button
        android:id="@+id/routine"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_routine"
        android:drawableTop="@drawable/daily_routine"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Routines"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <Button
        android:id="@+id/notice"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_notice"
        android:drawableTop="@drawable/notices"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Notices"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/attendance"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_attendance"
        android:drawableTop="@drawable/attendance"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Attendance"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <Button
        android:id="@+id/exam"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_exam"
        android:drawableTop="@drawable/routine"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Exams"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <Button
        android:id="@+id/contact"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_contact"
        android:drawableTop="@drawable/contact"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Contacts"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/fee"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_fee"
        android:drawableTop="@drawable/fee"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Fees"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/syllebus"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_syllebus"
        android:drawableTop="@drawable/syllebus"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Syllebus"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <Button
        android:id="@+id/result"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/menu_item_result"
        android:drawableTop="@drawable/result"
        android:elevation="100dp"
        android:fontFamily="@font/amarante"
        android:padding="10dp"
        android:text="Results"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/floating" />
</android.support.constraint.ConstraintLayout>