<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inTime"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/pnoneNo"
        app:layout_constraintEnd_toStartOf="@+id/outTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pnoneNo"
        app:layout_constraintTop_toTopOf="@+id/pnoneNo" />

    <TextView
        android:id="@+id/status"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/outTime"
        app:layout_constraintEnd_toStartOf="@+id/lateTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/outTime"
        app:layout_constraintTop_toTopOf="@+id/outTime" />

    <TextView
        android:id="@+id/teacherId"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/teacherName"
        app:layout_constraintEnd_toStartOf="@+id/designation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teacherName"
        app:layout_constraintTop_toTopOf="@+id/teacherName" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/teacherId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/serial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/serial"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/teacherName"
        app:layout_constraintEnd_toStartOf="@+id/teacherName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacherName" />

    <TextView
        android:id="@+id/lateTime"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/status"
        app:layout_constraintEnd_toStartOf="@+id/isLeave"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/status" />

    <TextView
        android:id="@+id/designation"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:minWidth="210dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBottom_toBottomOf="@+id/teacherId"
        app:layout_constraintEnd_toStartOf="@+id/pnoneNo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teacherId"
        app:layout_constraintTop_toTopOf="@+id/teacherId" />

    <TextView
        android:id="@+id/pnoneNo"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/designation"
        app:layout_constraintEnd_toStartOf="@+id/inTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/designation"
        app:layout_constraintTop_toTopOf="@+id/designation" />

    <TextView
        android:id="@+id/outTime"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/inTime"
        app:layout_constraintEnd_toStartOf="@+id/status"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/inTime"
        app:layout_constraintTop_toTopOf="@+id/inTime" />

    <TextView
        android:id="@+id/isLeave"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/table_cell_border_black"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/lateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lateTime"
        app:layout_constraintTop_toTopOf="@+id/lateTime" />

</android.support.constraint.ConstraintLayout>