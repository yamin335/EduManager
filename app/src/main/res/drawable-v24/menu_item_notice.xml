<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#ec407a" />
            <gradient android:angle="-90" android:startColor="#ec407a" android:centerColor="#ec407a" android:endColor="#ec407a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#ec407a" />
            <solid android:color="#ec407a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <!--<stroke android:width="1dip" android:color="#42a5f5" />-->
            <gradient android:angle="-90"  android:startColor="#ec407a" android:centerColor="#ec407a" android:endColor="#ec407a"  />
        </shape>
    </item>

</selector>