<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e90303" />
            <gradient android:angle="-90" android:startColor="#e90303" android:endColor="#e90303"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e90303" />
            <solid android:color="#e90303"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#174b92" />
            <gradient android:angle="-90" android:startColor="#174b92" android:endColor="#e90303" />
        </shape>
    </item>

</selector>