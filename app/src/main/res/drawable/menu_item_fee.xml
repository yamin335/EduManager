<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#d500f9" />
            <gradient android:angle="-90" android:startColor="#d500f9" android:centerColor="#d500f9" android:endColor="#d500f9" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#d500f9" />
            <solid android:color="#d500f9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <!--<stroke android:width="1dip" android:color="#42a5f5" />-->
            <gradient android:angle="-90"  android:startColor="#d500f9" android:centerColor="#d500f9" android:endColor="#d500f9"  />
        </shape>
    </item>

</selector>