<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="onair.onems">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/onair"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainactivities.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashScreen">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainactivities.LoginScreen"
            android:theme="@style/SplashScreen"></activity>
        <activity android:name=".mainactivities.StudentMainScreen"
            android:theme="@style/SplashScreen"></activity>
        <activity android:name=".mainactivities.TeacherMainScreen"
            android:theme="@style/SplashScreen"></activity>
        <activity
            android:name=".mainactivities.TakeAttendance"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".mainactivities.ShowAttendance"
            android:theme="@style/AppTheme"
            android:label="Show Attendance"
            android:parentActivityName="onair.onems.mainactivities.TakeAttendance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.TakeAttendance" />
        </activity>
        <activity
            android:name=".mainactivities.StudentAttendance"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="onair.onems.mainactivities.StudentAttendanceShow"
            android:label="Attendance"
            android:parentActivityName="onair.onems.mainactivities.StudentAttendance">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.StudentAttendance" />
        </activity>
        <activity
            android:name="onair.onems.mainactivities.TakeAttendanceDetails"
            android:label="Take Attendance"
            android:parentActivityName="onair.onems.mainactivities.TakeAttendance">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.TakeAttendance" />
        </activity>
        <activity android:name=".mainactivities.SubjectWiseAttendance"
            android:theme="@style/AppTheme"
            android:label="Attendance"
            android:parentActivityName="onair.onems.mainactivities.StudentAttendance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.StudentAttendance" />

        </activity>

        <activity
            android:name="onair.onems.mainactivities.AllStudentAttendanceShow"
            android:label="Attendance"
            android:parentActivityName="onair.onems.mainactivities.StudentAttendanceShow">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.StudentAttendanceShow" />
        </activity>
        <activity
            android:name="onair.onems.mainactivities.AllStudentSubjectWiseAttendance"
            android:label="Attendance"
            android:parentActivityName="onair.onems.mainactivities.AllStudentAttendanceShow">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="onair.onems.mainactivities.AllStudentAttendanceShow" />
        </activity>
    </application>

</manifest>